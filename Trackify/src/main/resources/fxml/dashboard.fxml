<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="App.controllers.DashboardController"
      spacing="16" styleClass="root-container">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18"/>
    </padding>


    <HBox spacing="14" alignment="CENTER_LEFT">
        <VBox styleClass="kpi-card" spacing="6">
            <Label text="Revenue" styleClass="kpi-label"/>
            <Label fx:id="revenueLabel" text="0.00" styleClass="kpi-value"/>
            <Region styleClass="indicator-green"/>
        </VBox>

        <VBox styleClass="kpi-card" spacing="6">
            <Label text="Cost" styleClass="kpi-label"/>
            <Label fx:id="costLabel" text="0.00" styleClass="kpi-value"/>
            <Region styleClass="indicator-red"/>
        </VBox>

        <VBox styleClass="kpi-card" spacing="6">
            <Label text="Total Profit" styleClass="kpi-label"/>
            <Label fx:id="totalProfitLabel" text="0.00" styleClass="kpi-value"/>
            <Region styleClass="indicator-blue"/>
        </VBox>

        <VBox styleClass="kpi-card" spacing="6">
            <Label text="Weekly Profit" styleClass="kpi-label"/>
            <Label fx:id="weeklyProfitLabel" text="0.00" styleClass="kpi-value"/>
            <Region styleClass="indicator-purple"/>
        </VBox>

        <VBox styleClass="kpi-card" spacing="6">
            <Label text="Monthly Profit" styleClass="kpi-label"/>
            <Label fx:id="monthlyProfitLabel" text="0.00" styleClass="kpi-value"/>
            <Region styleClass="indicator-teal"/>
        </VBox>

        <Region HBox.hgrow="ALWAYS"/>

        <VBox styleClass="wallet-card-usd" spacing="6" prefWidth="180">
            <Label text="USD Wallet" styleClass="wallet-label"/>
            <Label fx:id="usdWalletLabel" text="0.00" styleClass="wallet-value"/>
        </VBox>

        <VBox styleClass="wallet-card-php" spacing="6" prefWidth="180">
            <Label text="PHP Equivalent" styleClass="wallet-label"/>
            <Label fx:id="phpEquivalentLabel" text="â‚±0.00" styleClass="wallet-value"/>
        </VBox>
    </HBox>


    <HBox spacing="12">
        <TableView fx:id="transactionTable" styleClass="transaction-table" prefHeight="520" prefWidth="1000">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="120"/>
                <TableColumn fx:id="customerColumn" text="Customer" prefWidth="140"/>
                <TableColumn fx:id="itemColumn" text="Item" prefWidth="220"/>
                <TableColumn fx:id="paymentColumn" text="Payment" prefWidth="120"/>
                <TableColumn fx:id="revenueColumn" text="Revenue" prefWidth="120"/>
                <TableColumn fx:id="costColumn" text="Cost" prefWidth="120"/>
                <TableColumn fx:id="profitColumn" text="Profit" prefWidth="120"/>
                <TableColumn fx:id="notesColumn" text="Notes" prefWidth="200"/>
            </columns>
            <VBox.vgrow>ALWAYS</VBox.vgrow>
        </TableView>


        <VBox spacing="8" prefWidth="320">
            <Label text="Wallet Activity" style="-fx-text-fill: #ffffff; -fx-font-weight: bold; -fx-padding: 0 0 6 0;"/>
            <ListView fx:id="walletListView" styleClass="wallet-activity" prefWidth="320" prefHeight="520">
            </ListView>
        </VBox>
    </HBox>


    <HBox spacing="12" alignment="CENTER">
        <Button fx:id="recordTransactionBtn" text="Record Transaction" styleClass="action-button-green" onAction="#handleRecordTransaction" prefWidth="160" prefHeight="40"/>
        <Button fx:id="deleteSelectedBtn" text="Delete Selected" styleClass="action-button-red" onAction="#handleDeleteSelected" prefWidth="160" prefHeight="40"/>
        <Button fx:id="exportCsvBtn" text="Export CSV" styleClass="action-button-blue" onAction="#handleExportCsv" prefWidth="160" prefHeight="40"/>
        <Button fx:id="buyItemsBtn" text="Buy Items" styleClass="action-button-purple" onAction="#handleBuyItems" prefWidth="160" prefHeight="40"/>
        <Button fx:id="currencyConverterBtn" text="Currency Converter" styleClass="action-button-orange" onAction="#handleCurrencyConverter" prefWidth="160" prefHeight="40"/>
        <Button fx:id="depositBtn" text="Deposit" styleClass="action-button-green" onAction="#handleDeposit" prefWidth="160" prefHeight="40"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="withdrawBtn" text="Withdraw" styleClass="action-button-red-dark" onAction="#handleWithdraw" prefWidth="160" prefHeight="40"/>
    </HBox>
</VBox>
