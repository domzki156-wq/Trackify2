<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="App.controllers.LoginController"
      alignment="CENTER"
      spacing="16"
      stylesheets="@/styles/app.css"
      styleClass="auth-root">

    <!-- Card -->
    <StackPane styleClass="auth-card" maxWidth="520" maxHeight="360">
        <!-- use style instead of padding attribute -->
        <VBox alignment="CENTER" spacing="12" style="-fx-padding:20;">
            <!-- logo / app title -->
            <HBox alignment="CENTER" spacing="10">
                <Label text="Trackify" styleClass="auth-title"/>
            </HBox>

            <!-- subtitle -->
            <Label text="Sign in to your account" styleClass="auth-subtitle"/>

            <!-- username -->
            <TextField fx:id="usernameField" promptText="Username" styleClass="auth-field" />

            <!-- password -->
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="auth-field" />

            <!-- action row -->
            <HBox spacing="10" alignment="CENTER">
                <Button text="Login" onAction="#handleLogin" styleClass="primary-btn" />
                <Button text="Register" onAction="#openRegister" styleClass="secondary-btn" />
            </HBox>

            <!-- message -->
            <Label fx:id="messageLabel" styleClass="auth-error" />

            <!-- small helper -->
            <HBox alignment="CENTER" spacing="6">
                <Label text="Need an account?" style="-fx-text-fill:rgba(255,255,255,0.6); -fx-font-size:12px;"/>
                <Button text="Create one" onAction="#openRegister" styleClass="link-btn"/>
            </HBox>
        </VBox>
    </StackPane>
</VBox>
