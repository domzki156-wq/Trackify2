<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="App.controllers.CurrencyConverterController"
      spacing="15" styleClass="dialog-container" prefWidth="450" prefHeight="350">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Currency Converter" styleClass="dialog-title"/>

    <Separator/>

    <!-- Exchange Rate -->
    <VBox spacing="5">
        <Label text="Exchange Rate (PHP per USD):" styleClass="field-label"/>
        <TextField fx:id="exchangeRateField" promptText="59.07" styleClass="input-field"/>
    </VBox>

    <Separator/>

    <!-- USD Input -->
    <VBox spacing="5">
        <Label text="USD Amount:" styleClass="field-label"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="usdAmountField" promptText="0.00"
                       styleClass="input-field">
                <HBox.hgrow>ALWAYS</HBox.hgrow>
            </TextField>
            <Button text="Convert to PHP ➜" onAction="#handleUsdToPhp"
                    styleClass="convert-button" prefWidth="150"/>
        </HBox>
    </VBox>

    <!-- PHP Input -->
    <VBox spacing="5">
        <Label text="PHP Amount:" styleClass="field-label"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="phpAmountField" promptText="0.00"
                       styleClass="input-field">
                <HBox.hgrow>ALWAYS</HBox.hgrow>
            </TextField>
            <Button text="Convert to USD ➜" onAction="#handlePhpToUsd"
                    styleClass="convert-button" prefWidth="150"/>
        </HBox>
    </VBox>

    <Region>
        <VBox.vgrow>ALWAYS</VBox.vgrow>
    </Region>

    <Separator/>

    <!-- Close Button -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="closeButton" text="Close" onAction="#handleClose"
                styleClass="secondary-button" prefWidth="120" prefHeight="35"/>
    </HBox>
</VBox>