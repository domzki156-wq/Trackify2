<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="App.controllers.BuyItemController" spacing="12" style="-fx-padding:18;">
    <Label text="Buy Items / Inventory" styleClass="auth-title"/>

    <HBox spacing="12">
        <VBox spacing="8" prefWidth="380">
            <Label text="Products:"/>
            <ListView fx:id="productList" prefHeight="240"/>
        </VBox>

        <VBox spacing="8" prefWidth="320">
            <Label text="Selected Product / New Product"/>
            <TextField fx:id="nameField" promptText="Product name"/>
            <TextField fx:id="skuField" promptText="SKU (optional)"/>
            <TextField fx:id="categoryField" promptText="Category (optional)"/>
            <HBox spacing="8">
                <TextField fx:id="priceField" promptText="Price (USD)"/>
                <TextField fx:id="stockField" promptText="Stock (qty)"/>
            </HBox>

            <HBox spacing="8">
                <Button text="Add / Update Product" onAction="#handleAddOrUpdate" />
                <Button text="Buy (debit wallet)" onAction="#handleBuy" />
            </HBox>

            <Label fx:id="messageLabel" styleClass="auth-error" text=""/>
        </VBox>
    </HBox>

    <HBox spacing="8" alignment="CENTER_RIGHT">
        <Button text="Close" onAction="#handleClose"/>
    </HBox>
</VBox>
