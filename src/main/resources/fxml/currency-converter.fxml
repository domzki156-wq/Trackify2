<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="App.controllers.CurrencyConverterController"
      spacing="12" alignment="CENTER" styleClass="root-container" prefWidth="380">

    <padding>
        <Insets top="18" right="18" bottom="18" left="18"/>
    </padding>

    <Label text="Currency Converter" styleClass="auth-title"/>
    <GridPane hgap="8" vgap="8">
        <columnConstraints>
            <ColumnConstraints percentWidth="35"/>
            <ColumnConstraints percentWidth="65"/>
        </columnConstraints>

        <Label text="USD:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="usdField" promptText="Amount in USD" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="PHP:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="phpField" promptText="Amount in PHP" GridPane.rowIndex="1" GridPane.columnIndex="1" editable="false"/>

        <Label fx:id="statusLabel" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" />
    </GridPane>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Convert" onAction="#handleConvert" fx:id="convertBtn" styleClass="primary-btn" prefWidth="120"/>
        <Button text="Close" onAction="#handleClose" styleClass="secondary-btn" prefWidth="120"/>
    </HBox>
</VBox>
