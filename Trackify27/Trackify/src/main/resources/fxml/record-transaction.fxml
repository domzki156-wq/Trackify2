<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="App.controllers.RecordTransactionController"
      spacing="15" styleClass="dialog-container" prefWidth="500" prefHeight="500">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Record New Transaction" styleClass="dialog-title"/>

    <Separator/>

    <!-- Date -->
    <VBox spacing="5">
        <Label text="Date:" styleClass="field-label"/>
        <DatePicker fx:id="datePicker" prefWidth="460" styleClass="input-field"/>
    </VBox>

    <!-- Customer -->
    <VBox spacing="5">
        <Label text="Customer:" styleClass="field-label"/>
        <TextField fx:id="customerField" promptText="Enter customer name"
                   styleClass="input-field"/>
    </VBox>

    <!-- Item -->
    <VBox spacing="5">
        <Label text="Item:" styleClass="field-label"/>
        <TextField fx:id="itemField" promptText="Enter item description"
                   styleClass="input-field"/>
    </VBox>

    <!-- Payment Method -->
    <VBox spacing="5">
        <Label text="Payment Method:" styleClass="field-label"/>
        <ComboBox fx:id="paymentMethodCombo" prefWidth="460" styleClass="input-field"/>
    </VBox>

    <!-- Revenue and Cost -->
    <HBox spacing="10">
        <VBox spacing="5">
            <Label text="Revenue (USD):" styleClass="field-label"/>
            <TextField fx:id="revenueField" promptText="0.00" styleClass="input-field"/>
            <HBox.hgrow>ALWAYS</HBox.hgrow>
        </VBox>

        <VBox spacing="5">
            <Label text="Cost (USD):" styleClass="field-label"/>
            <TextField fx:id="costField" promptText="0.00" styleClass="input-field"/>
            <HBox.hgrow>ALWAYS</HBox.hgrow>
        </VBox>
    </HBox>

    <!-- Notes -->
    <VBox spacing="5">
        <Label text="Notes (Optional):" styleClass="field-label"/>
        <TextArea fx:id="notesArea" promptText="Enter any additional notes..."
                  prefRowCount="4" styleClass="input-field"/>
        <VBox.vgrow>ALWAYS</VBox.vgrow>
    </VBox>

    <Separator/>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"
                styleClass="secondary-button" prefWidth="120" prefHeight="35"/>
        <Button fx:id="saveButton" text="Save Transaction" onAction="#handleSave"
                styleClass="primary-button" prefWidth="150" prefHeight="35"/>
    </HBox>
</VBox>