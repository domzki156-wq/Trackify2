<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="oop.barcelo.trackify27.controllers.RegistrationController"
            prefWidth="1000" prefHeight="650" styleClass="root-pane">
    <top>
        <Label text="Create an account" styleClass="page-title" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <StackPane>
            <VBox alignment="TOP_CENTER" spacing="18" style="-fx-padding: 28;" maxWidth="640">
                <GridPane hgap="10" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="36"/>
                        <ColumnConstraints percentWidth="64"/>
                    </columnConstraints>

                    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="usernameField" promptText="username" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="emailField" promptText="you@example.com" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                    <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <PasswordField fx:id="passwordField" promptText="password" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                    <Label text="Confirm:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <PasswordField fx:id="passwordConfirmField" promptText="confirm password" GridPane.rowIndex="3" GridPane.columnIndex="1" />
                </GridPane>

                <HBox spacing="12" alignment="CENTER">
                    <Button text="Register" onAction="#onRegisterPressed" styleClass="primary-button" prefWidth="160"/>
                    <Button text="Back to Login" onAction="#onBackToLogin" styleClass="ghost-button" prefWidth="160"/>
                </HBox>

                <Label fx:id="messageLabel" text="" wrapText="true" styleClass="message-label"/>
            </VBox>
        </StackPane>
    </center>
</BorderPane>
