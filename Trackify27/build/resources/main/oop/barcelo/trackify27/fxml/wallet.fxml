<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="oop.barcelo.trackify27.controllers.WalletController"
      spacing="10" padding="12">
    <Label fx:id="titleLabel"
           text="Wallet Action"
           style="-fx-font-weight: bold; -fx-font-size: 15px;"/>

    <GridPane hgap="8" vgap="8">
        <columnConstraints>
            <ColumnConstraints percentWidth="40"/>
            <ColumnConstraints percentWidth="60"/>
        </columnConstraints>

        <Label text="Amount (USD):" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="amountField"
                   promptText="e.g. 50.00"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Note (optional):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="noteField"
                   promptText="reason or memo"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>
</VBox>
