<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.barcelo.trackify27.controllers.TransactionFormController" prefWidth="600" prefHeight="420">
    <children>
        <VBox spacing="8" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10">
            <HBox spacing="10">
                <Label text="Date:" />
                <DatePicker fx:id="datePicker" />
                <Label text="Customer:" />
                <TextField fx:id="customerField" />
            </HBox>
            <HBox spacing="10">
                <Label text="Item:" />
                <TextField fx:id="itemField" />
                <Label text="Payment:" />
                <TextField fx:id="paymentField" />
            </HBox>
            <HBox spacing="10">
                <Label text="Revenue:" />
                <TextField fx:id="revenueField" />
                <Label text="Cost:" />
                <TextField fx:id="costField" />
            </HBox>
            <Label text="Notes:" />
            <TextArea fx:id="notesArea" prefRowCount="6" />
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Save" onAction="#onSave" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
