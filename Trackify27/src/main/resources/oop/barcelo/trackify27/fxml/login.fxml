<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="oop.barcelo.trackify27.controllers.LoginController"
            prefWidth="1000" prefHeight="650" styleClass="root-pane">

    <!-- Left brand panel -->
    <left>
        <VBox alignment="CENTER" spacing="14" styleClass="left-panel" prefWidth="360">
            <padding><Insets top="48" right="24" bottom="48" left="24"/></padding>

            <ImageView fitWidth="140" fitHeight="140" pickOnBounds="true" preserveRatio="true" styleClass="logo">
                <!-- Optionally set image via code or resource -->
            </ImageView>

            <Label text="Trackify" styleClass="brand-title"/>
            <Label text="A lightweight tracker for your tasks" styleClass="brand-sub"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Label text="Built with JavaFX + MongoDB" styleClass="brand-caption"/>
        </VBox>
    </left>

    <!-- Center form -->
    <center>
        <StackPane>
            <VBox alignment="TOP_CENTER" spacing="16" maxWidth="520" style="-fx-padding: 40;">
                <Label text="Sign in to your account" styleClass="page-title"/>
                <GridPane hgap="10" vgap="12">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="34"/>
                        <ColumnConstraints percentWidth="66"/>
                    </columnConstraints>

                    <Label text="Username or Email:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="usernameField" promptText="username or email" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <PasswordField fx:id="passwordField" promptText="password" GridPane.rowIndex="1" GridPane.columnIndex="1" />
                </GridPane>

                <HBox spacing="12" alignment="CENTER">
                    <Button text="Login" onAction="#onLoginPressed" styleClass="primary-button" prefWidth="140"/>
                    <Button text="Register" onAction="#onOpenRegistration" styleClass="ghost-button" prefWidth="140"/>
                </HBox>

                <Label fx:id="messageLabel" text="" wrapText="true" styleClass="message-label" />
            </VBox>
        </StackPane>
    </center>
</BorderPane>
