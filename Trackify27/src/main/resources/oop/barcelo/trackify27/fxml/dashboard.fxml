<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="oop.barcelo.trackify27.controllers.DashboardController"
            prefWidth="1000" prefHeight="650" styleClass="root-pane">

    <!-- Top bar -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="12" styleClass="topbar">
            <padding><Insets top="8" right="16" bottom="8" left="16"/></padding>
            <Label fx:id="welcomeLabel" text="Welcome!" styleClass="welcome-label" HBox.hgrow="ALWAYS"/>
            <Button text="Logout" onAction="#onLogout" styleClass="ghost-button"/>
        </HBox>
    </top>

    <!-- Left nav -->
    <left>
        <VBox spacing="8" styleClass="sidebar" prefWidth="220">
            <padding><Insets top="18" right="12" bottom="18" left="12"/></padding>
            <Label text="Menu" styleClass="sidebar-title"/>
            <Button text="Dashboard" styleClass="sidebar-button" prefWidth="196"/>
            <Button text="Items" styleClass="sidebar-button" prefWidth="196"/>
            <Button text="Settings" styleClass="sidebar-button" prefWidth="196"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Label text="v0.1" styleClass="sidebar-version"/>
        </VBox>
    </left>

    <!-- Main content -->
    <center>
        <StackPane>
            <VBox alignment="TOP_CENTER" spacing="12">
                <Label text="Dashboard" styleClass="content-title"/>
                <Label text="This is a placeholder dashboard - replace with your content" styleClass="content-sub"/>
                <!-- Put your main components here -->
            </VBox>
        </StackPane>
    </center>
</BorderPane>
